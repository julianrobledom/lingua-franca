target C {
  timeout: 1 sec
}

import PhysicalPlant, Controller, Planner from "FeedbackDelay.lf"

federated reactor {
  p = new PhysicalPlant()
  c = new Controller()
  pl = new Planner()
  p2 = new Planner()

  p.sensor -> c.sensor
  c.request_for_planning -> pl.request after 0
  pl.response -> p2.request
  p2.response -> c.planning
  c.control -> p.control
}
