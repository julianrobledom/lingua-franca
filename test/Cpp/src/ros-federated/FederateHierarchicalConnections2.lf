  input in_cont: std_msgs::msg::Int64
  output out_cont: std_msgs::msg::Int64
  output out2: std_msgs::msg::Int64
  output out3: std_msgs::msg::Int64

    // own port to federate and other way around not working yet
   @federate
  gain = new Gain()
  in_cont -> gain.in

  reaction(in_cont)  {=
      //std_msgs::msg::Int64 i;
      RCLCPP_INFO_STREAM(lf_node->get_logger(), "gain container gaining");
      //i.data = in.get()->data*2;
      //gain.in.set(i);
  =}

  //reaction(gain.out) {=
  //  RCLCPP_INFO_STREAM(lf_node->get_logger(), "gain container reacting");
  //=}
  gain.out -> out_cont
  //gain.out -> out2
}

main reactor {
  source = new Source()

  // lf says no when referencing anything except ports from instances
  //reaction(source.t){=
  //  RCLCPP_INFO_STREAM(lf_node->get_logger(), "main reacting to source.t");
  //=}

    @federate
  container = new GainContainer()

  print = new Print()

  print2 = new Print()
  source.out ~> container.in_cont
  container.out_cont -> print.in
  container.out_cont -> print2.in after 2s
}
